# Staging Environment Configuration
# Use this for testing before production deployment

APP_NAME=SalonPro
APP_ENV=staging
APP_KEY=
APP_DEBUG=true
APP_URL=https://staging.salonpro.com
APP_TIMEZONE=Europe/Istanbul

APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=salonpro_staging
DB_USERNAME=salonpro_staging
DB_PASSWORD=

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=7200
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.salonpro.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis
CACHE_PREFIX=salonpro_staging_cache

MEMCACHED_HOST=127.0.0.1

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Email
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="staging@salonpro.com"
MAIL_FROM_NAME="${APP_NAME} (Staging)"

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=salonpro-staging
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Staging specific settings
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=false

# Monitoring
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
