includes:
    - ./vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app
        - config
        - database
        - routes

    # Rule level: 5 (balanced - reduced from 8 for practical development)
    level: 5

    # Ignore errors in specific directories
    excludePaths:
        - bootstrap
        - storage
        - vendor
        - node_modules

    # Ignore specific errors (use sparingly)
    ignoreErrors:
        # Add specific error patterns here if needed

    # Report unused variables and parameters
    checkUninitializedProperties: true
    checkTooWideReturnTypesInProtectedAndPublicMethods: true
    checkImplicitMixed: true
    checkBenevolentUnionTypes: true

    # Laravel specific
    noUnnecessaryCollectionCall: true
    noUnnecessaryCollectionCallOnly: []
    noUnnecessaryCollectionCallExcept: []

    # Better error output
    parallel:
        maximumNumberOfProcesses: 8
        processTimeout: 300.0
