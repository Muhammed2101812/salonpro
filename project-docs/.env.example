# ============================================
# SalonPro - Environment Configuration
# ============================================
# Copy this file to .env and configure your environment
# Never commit .env to version control!
# ============================================

# ============================================
# Application
# ============================================

APP_NAME="SalonPro"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Istanbul
APP_URL=http://localhost:8000
APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

# ============================================
# Database
# ============================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=salonpro
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ============================================
# Cache
# ============================================

CACHE_DRIVER=redis
CACHE_PREFIX=salonpro_cache

# ============================================
# Session
# ============================================

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# ============================================
# Queue
# ============================================

QUEUE_CONNECTION=redis
QUEUE_PREFIX=salonpro_queue

# ============================================
# Redis
# ============================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_PREFIX=salonpro_

# ============================================
# Mail
# ============================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@salonpro.com"
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Gmail
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# Alternative: Mailgun
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# Alternative: Postmark
# POSTMARK_TOKEN=

# Alternative: SendGrid
# SENDGRID_API_KEY=

# ============================================
# SMS (for Turkish market)
# ============================================

SMS_PROVIDER=netgsm
# Options: netgsm, iletimerkezi, twilio

# Netgsm (Turkish provider)
NETGSM_USERNAME=
NETGSM_PASSWORD=
NETGSM_HEADER=
NETGSM_LANGUAGE=tr

# Ä°letimerkezi (Turkish provider)
ILETIMERKEZI_API_KEY=
ILETIMERKEZI_API_SECRET=
ILETIMERKEZI_SENDER=

# Twilio (International)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# File Storage
# ============================================

FILESYSTEM_DISK=local
# Options: local, s3, minio

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# MinIO (S3-compatible)
MINIO_ENDPOINT=http://localhost:9000
MINIO_KEY=
MINIO_SECRET=
MINIO_REGION=us-east-1
MINIO_BUCKET=salonpro
MINIO_USE_PATH_STYLE_ENDPOINT=true

# ============================================
# Search
# ============================================

MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=
MEILISEARCH_INDEX_PREFIX=salonpro_

# Alternative: Algolia
ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# ============================================
# Broadcasting
# ============================================

BROADCAST_DRIVER=log
# Options: log, pusher, ably, redis

# Pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_SCHEME=https
PUSHER_PORT=443

# Ably
ABLY_KEY=

# ============================================
# Logging
# ============================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Sentry (Error tracking)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# Authentication
# ============================================

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:8000
SESSION_DOMAIN=localhost

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# Password Rules
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRES_UPPERCASE=true
PASSWORD_REQUIRES_LOWERCASE=true
PASSWORD_REQUIRES_NUMBERS=true
PASSWORD_REQUIRES_SYMBOLS=true
PASSWORD_EXPIRY_DAYS=90

# Session Settings
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ============================================
# API
# ============================================

API_PREFIX=api
API_VERSION=v1
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# ============================================
# Multi-Currency
# ============================================

DEFAULT_CURRENCY=TRY
SUPPORTED_CURRENCIES=TRY,USD

# Currency API for exchange rates
CURRENCY_API_PROVIDER=tcmb
# Options: tcmb (Turkish Central Bank), exchangerate, fixer

# ExchangeRate API
EXCHANGERATE_API_KEY=

# Fixer.io
FIXER_API_KEY=

# Update frequency
CURRENCY_UPDATE_FREQUENCY=daily

# ============================================
# Multi-Language
# ============================================

SUPPORTED_LOCALES=tr,en
DEFAULT_LOCALE=tr
FALLBACK_LOCALE=en

# ============================================
# Business Rules
# ============================================

# Appointments
APPOINTMENT_MIN_ADVANCE_HOURS=1
APPOINTMENT_MAX_FUTURE_DAYS=90
APPOINTMENT_SLOT_DURATION_MINUTES=15
APPOINTMENT_BUFFER_MINUTES=0
APPOINTMENT_ALLOW_OVERBOOKING=false
APPOINTMENT_CANCELLATION_WINDOW_HOURS=24
APPOINTMENT_LATE_TOLERANCE_MINUTES=15

# Payments
PAYMENT_REFUND_APPROVAL_THRESHOLD_TRY=500
PAYMENT_REFUND_APPROVAL_THRESHOLD_USD=15
PAYMENT_REFUND_WINDOW_DAYS=30

# Inventory
INVENTORY_ALLOW_NEGATIVE_STOCK=false
INVENTORY_LOW_STOCK_ALERT_DAYS=30
INVENTORY_EXPIRY_ALERT_DAYS=30

# Employees
EMPLOYEE_COMMISSION_PAYMENT_DAY=1
EMPLOYEE_COMMISSION_MINIMUM_TRY=100
EMPLOYEE_COMMISSION_MINIMUM_USD=3

# ============================================
# Features Toggle
# ============================================

FEATURE_ONLINE_BOOKING=true
FEATURE_LOYALTY_PROGRAM=true
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_WHATSAPP_INTEGRATION=false
FEATURE_SOCIAL_LOGIN=false

# ============================================
# Development Tools
# ============================================

# Laravel Telescope
TELESCOPE_ENABLED=true
TELESCOPE_PRUNING_ENABLED=true
TELESCOPE_PRUNING_DAYS=7

# Laravel Horizon
HORIZON_ENABLED=true
HORIZON_PREFIX=horizon_

# Debugbar
DEBUGBAR_ENABLED=true

# ============================================
# Testing
# ============================================

# Test Database
TEST_DB_CONNECTION=mysql
TEST_DB_HOST=127.0.0.1
TEST_DB_PORT=3306
TEST_DB_DATABASE=salonpro_test
TEST_DB_USERNAME=root
TEST_DB_PASSWORD=

# ============================================
# Security
# ============================================

# CORS
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="*"
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# IP Whitelist (comma-separated, leave empty to disable)
IP_WHITELIST=

# IP Blacklist (comma-separated)
IP_BLACKLIST=

# ============================================
# Compliance
# ============================================

# KVKK (Turkish Data Protection)
KVKK_ENABLED=true
KVKK_CONSENT_REQUIRED=true
KVKK_DATA_RETENTION_YEARS=7

# GDPR (European Union)
GDPR_ENABLED=true
GDPR_RIGHT_TO_DELETION=true
GDPR_DATA_PORTABILITY=true
GDPR_BREACH_NOTIFICATION_HOURS=72

# ============================================
# Monitoring & Analytics
# ============================================

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Google Tag Manager
GOOGLE_TAG_MANAGER_ID=

# Facebook Pixel
FACEBOOK_PIXEL_ID=

# ============================================
# Social Media Integration
# ============================================

# Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URL="${APP_URL}/auth/facebook/callback"

# Instagram
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URL="${APP_URL}/auth/instagram/callback"

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

# ============================================
# Payment Gateways
# ============================================

# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_MODE=sandbox
# Options: sandbox, live
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# iyzico (Turkish payment provider)
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
# For production: https://api.iyzipay.com

# PayTR (Turkish payment provider)
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=

# ============================================
# Backup
# ============================================

BACKUP_ENABLED=true
BACKUP_DISK=s3
# Options: local, s3, minio

BACKUP_SCHEDULE_FREQUENCY=daily
# Options: hourly, daily, weekly

BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATIONS_EMAIL=backup@salonpro.com

# ============================================
# Optimization
# ============================================

# OPcache
OPCACHE_ENABLED=true

# Query Logging (disable in production)
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000

# Response Cache
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_LIFETIME=3600

# ============================================
# Third-Party Services
# ============================================

# OpenAI (for AI features)
OPENAI_API_KEY=

# Weather API (for appointment suggestions)
WEATHER_API_KEY=

# Maps (Google Maps or Mapbox)
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# ============================================
# Custom Settings
# ============================================

# Company Information
COMPANY_NAME="SalonPro"
COMPANY_EMAIL=info@salonpro.com
COMPANY_PHONE="+90 555 123 4567"
COMPANY_ADDRESS="Istanbul, Turkey"
COMPANY_WEBSITE=https://salonpro.com

# Support
SUPPORT_EMAIL=support@salonpro.com
SUPPORT_PHONE="+90 555 765 4321"

# Legal
TERMS_OF_SERVICE_URL="${APP_URL}/terms"
PRIVACY_POLICY_URL="${APP_URL}/privacy"

# ============================================
# Docker (if using Docker)
# ============================================

DOCKER_APP_PORT=8000
DOCKER_MYSQL_PORT=3306
DOCKER_REDIS_PORT=6379
DOCKER_MEILISEARCH_PORT=7700

# ============================================
# Notes
# ============================================

# 1. Generate APP_KEY with: php artisan key:generate
# 2. Never commit .env file to version control
# 3. Update sensitive values in production
# 4. Use strong passwords and keys
# 5. Enable HTTPS in production (APP_URL with https://)
# 6. Set APP_DEBUG=false in production
# 7. Set APP_ENV=production in production
# 8. Configure proper backup storage
# 9. Set up monitoring and alerts
# 10. Review security settings before deployment
